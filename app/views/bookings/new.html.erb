      <h1 class="text-left"><%=@flight.airplane.airline.name%></h1>

      <div class="col">

          <table class="table table-hover">

 <tbody>
    <tr>
      <th>Departure Airport</th>
      <td><%= @flight.from.name%></td>
  </tr>

  <tr>
    <th>Arrival Airport</th>
    <td><%= @flight.to.name%></td>
  </tr>

  <tr>
    <th>Airplane Name</th>
    <td><%= @flight.airplane.name %></td>
  </tr>

  <tr>
    <th>Flight Code</th>
    <td><%= @flight.flight_code%></td>
  </tr>

  <tr>
    <th>Number of Passenger</th>
    <td class="pass"><%= @number_of_passengers%></td>
  </tr>

  <tr>
    <th>Price Per Passenger</th>
    <td><%= @flight.price %></td>
  </tr>
 </tbody>
</table>

      </div>



<br />



<h1 class="text-left">Add Passengers</h1>
<%= render 'partials/booking_form' %>



<button class="btn btn-warning btn-lg pull-left" href="#" role="button"><span class="glyphicon glyphicon-plane"></span> Book Flight</button>

