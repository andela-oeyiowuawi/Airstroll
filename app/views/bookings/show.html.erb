
  <div id="booking">
    <div class="container">
      <div class="row">
        <h4 class="text-center">Your Flight Has been successfully Booked.</h4>
        <h4 class="text-center">Here are your Flight Details</h4>

        <div class="col-md-5 show-details">
          <div class="panel panel-primary">
            <div class="panel-heading"><%=@flight.airplane.airline.name%></div>
            <div class="panel-body">
              <p class="text-left"><strong> Departure Time:</strong> <%=  @flight.dept_time %> </p>
              <p class="text-left"><strong> Departure Date:</strong> <%=  @flight.dept_date %> </p>
              <p class="text-left"><strong> Departure Airport:</strong> <%=  @flight.from.name %> </p>
              <p class="text-left"><strong> Arrival Airport:</strong> <%=  @flight.to.name %> </p>
              <p class="text-left"><strong> Airplane name: </strong><%= @flight.airplane.name %></p>
              <p class="text-left"><strong> Booking Code: </strong><%= @booking.confirmation_code %></p>
              <p class="text-left"><strong> Number Of Passenger(s):</strong> <%= @booking.passengers.count %></p>
              <p class="text-left"><strong> Price per Passenger: </strong><%=  @flight.price %> </p>
              <p class="text-left"><strong> Total Price: </strong><%= @flight.price.to_i * @booking.passengers.count.to_i %></p>

            </div>
          </div>
        </div>


        <div class="col-md-5 show-details">
          <div class="panel panel-primary">
            <div class="panel-heading">
              Passenger Details
            </div>
            <div class="panel-body">
              <!-- <%= render 'partials/booking_form' %> -->
              <% counter = 1 %>
              <% for passenger in @booking.passengers  %>
              <p> Passenger <%= counter %> </p>
              <p> Name: <%= passenger.name %> </p>
              <p> Email: <%= passenger.email %> </p>
              <hr>
                 <% counter += 1 %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
