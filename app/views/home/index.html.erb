<p> Welcome to Airstroll</p>

<div class = "trip"> Where do you want to go? </div>
<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<%= form_tag({controller: "home", action: "search"}, method: "get", class: "search_form") do %>
 <label>Flight Origin</label>
  <select name="flight[from]" id="from_airport">
  <% @airports.each do |airport|%>
  <option value="<%= airport.id %>"><%= airport.name + ', '+ airport.city + ', '+ airport.country %></option>
  <% end %>
  </select>
  <br />
  <label>Flight Destination</label>
   <select name="flight[to]" id="to_airport">
   <% @airports.each do |airport|%>
   <option value="<%= airport.id %>"><%= airport.name + ', '+ airport.city + ', '+ airport.country %></option>
   <% end %>
   </select>
   <br />
         <label>Departure date</label>
         <input id="departure_date" name="flight[date]" type="date" class="date-picker"/>
       <br />
       <label>No of passenger</label>
        <select name="flight[no_of_passenger]" id="to_airport">
        <% (1..10).to_a.each do |i|%>
        <option value="<%= i %>"><%= i %></option>
        <% end %>
        </select>
        <br />
        <div class="row div-pad">
          <div class="col-sm-12">
          <%= button_tag(type: "submit", class: "btn  orange-button") do %>
             <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search<% end %>
           </div>
       </div>
<% end %>
<% if @search_result %>
<% @search_result.each do |result| %>
<div id = "search_result">
  From <%= result.from.name +', '+result.from.city+", "+ result.from.country %>
  To <%= result.to.name +', '+result.to.city+", "+ result.to.country %>
  Departure Date <%= result.dept_date %> Departure Time <%= result.dept_time%>
  Price <%= result.price %>
</div>
<% end %>
<% end %>
