<section id="home" name="home"></section>
<div id="headerwrap" class="bg-class">
    <div class="container">




      <div class="container searchBox">
        <%= form_tag({controller: "flight", action: "search"}, method: "post", role: "form", remote: true) do %>
          <div class="row">
              <h3 class="text-center">Where do you want to go?</h3>
              <div class="col-sm-4">
                  <div class="form-group">
                    <label for="filter">Origin Airport</label>
                    <select  name="flight[from]" id="from_airport" class="form-control">
                      <option>Flight Origin</option>
                      <%= render 'partials/airport_list'%>
                    </select>
                </div>
              </div>
              <div class="col-sm-4">
                  <div class="form-group">
                    <label for="filter">Destination Airport</label>
                    <select  name="flight[to]" id="to_airport" class="form-control">
                      <option>Flight Destination</option>
                      <%= render 'partials/airport_list'%>
                    </select>
                </div>
              </div>

               <div class="col-sm-2">
                   <div class="form-group">
                     <label for="filter">Departure Date</label>
                          <input id="departure_date" name="flight[date]" type="date" class="date-picker form-control" title="Departure Date"/>
                        </div>
              </div>
              <div class="col-sm-2">
                <label for="filter"></label>
                  <!-- <a href="#" class="btn btn-block btn-primary">Full width Button</a> -->
                  <%= button_tag(type: "submit", class: "btn btn-info btn-block", id: "fsearch") do %>
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
              <% end %>
              </div>
          </div>
          <% end %>
      </div>




    </div>


        </div>




<div class="container" id="result">
<div id="flight-result">
  <h3 class="text-left flight-header"> Available Flights </h3>
  <hr>


  <% for flight in @flights %>
  <div class="col-md-3">
            <!--Image Card-->
            <% price = flight.price %>
            <div class="card hoverable">
                <div class="card-image">
                    <div class="view overlay hm-white-slight z-depth-1">
                        <a href="#">
                            <div class="mask waves-effect"></div>
                        </a>
                    </div>
                </div>
                <div class="card-content flight_title">
                    <p><%= flight.from.country %> to <%= flight.to.country %></p>
                  </div>

                <div class="card-content">
                  <p class="text-center"> Price </p>

                    <p class="text-center"> <%= number_to_currency(price, locale: :ng) %> </p>
                    </div>
                <div class="card-content">
                  <p class="text-center"> Airline </p>

                    <p class="text-center"> <%= flight.airplane.airline.name %> </p>
                    </div>
                <div class="card-content">
                    <p class="text-center">Departure Date</p>
                    <p class="text-center"><span class="glyphicon glyphicon-calendar"></span> <%= flight.dept_date %></p>
                    </div>
                <!--Buttons-->
                <div class="card-btn text-center">
                    <% booking_details = {:id =>flight.id} %>
                    <a class="btn btn-primary btn-md waves-effect waves-light" id="bkfl" href="<%= new_booking_path(booking_details) %>"> Book</a>
                </div>
                <!--/.Buttons-->
            </div>
            <!--Image Card-->
        </div>
        <% end %>
      </div>

      </div>
                    <div class="clear"></div>
