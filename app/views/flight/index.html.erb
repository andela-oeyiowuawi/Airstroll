<div class="jumbotron" id="jumbid">
  <div class="container">
    <div class="row text-center">
      <h1 id="welcome"> Welcome to Airstroll</h1>
      <h3 id="welcome"> Where do you want to go? </h3>
    </div>
    <div class="container" id="bg-container">
    <div class="row">
      <div class="col-lg-12">
        <%= form_tag({controller: "flight", action: "search"}, method: "post", class: "form-inline search-form", remote: true) do %>
        <div class="form-group">
          <select name="flight[from]" id="from_airport" class="form-control">
            <option>Flight Origin</option>
            <%= render 'partials/airport_list'%>
          </select>
        </div>

        <div class="form-group">
        <select name="flight[to]" id="to_airport" class="form-control">
          <option>Flight Destination</option>
          <%= render 'partials/airport_list'%>
        </select>
      </div>

        <div class="form-group">
          <!-- <label>Departure date</label> -->
          <input id="departure_date" name="flight[date]" type="date" class="date-picker"  class="form-control" data-toggle="tooltip" data-placement="top" title="Departure Date"/>
        </div>

        <div class="form-group">
          <select name="flight[no_of_passenger]" id="to_airport"  class="form-control" data-toggle="tooltip" data-placement="top" title="No. of Passengers">
            <% (1..10).to_a.each do |i|%>
            <option value="<%= i %>"><%= i %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group">
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
          <% end %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>


  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>

  <div id = "flight-result">

  </div>
