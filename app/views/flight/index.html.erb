<section id="home" name="home"></section>
<div id="headerwrap">
    <div class="container">
      <div class="row centered">
        <div class="col-lg-12">
        <h1>Welcome To <b>Airstroll</b></h1>
        <h3>where do you want to go?</h3>
        <br>
        </div>

        <div class="col-lg-2">
          <h5>Easy Search</h5>
          <p>Click the search button to begin your adventure.</p>
          <img class="hidden-xs hidden-sm hidden-md" src="assets/images/arrow1.png">
        </div>
        <div class="col-lg-8">
<!-- 	    			<img class="img-responsive" src="assets/img/app-bg.png" alt="">
-->

        <%= form_tag({controller: "flight", action: "search"}, method: "post", role: "form", remote: true) do %>

              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-12">
                  <div class="form-group">
                    <select name="flight[from]" id="from_airport" class="form-control">
                      <option>Flight Origin</option>
                      <%= render 'partials/airport_list'%>
                    </select>
                  </div>
                </div>

              </div>

              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-12">
                  <div class="form-group">
                    <select name="flight[to]" id="to_airport" class="form-control">
                      <option>Flight Destination</option>
                      <%= render 'partials/airport_list'%>
                    </select>
                  </div>
                </div>

              </div>


              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-12">
                  <div class="form-group">
                    <select name="flight[no_of_passenger]" id="to_airport"  class="form-control" data-toggle="tooltip" data-placement="top" title="No. of Passengers">
                      <% (1..10).to_a.each do |i|%>
                      <option value="<%= i %>"><%= i %></option>
                      <% end %>
                    </select>
                  </div>
                </div>

              </div>

              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-12">
                  <div class="form-group">
                    <input id="departure_date" name="flight[date]" type="date" class="date-picker form-control"  data-toggle="tooltip" data-placement="top" title="Departure Date"/>
                  </div>
                </div>

              </div>

              <%= button_tag(type: "submit", class: "btn btn-info btn-block") do %>
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
              <% end %>



            <% end %><!-- form end -->
            <br>


        </div>
        <div class="col-lg-2">
          <br>
          <img class="hidden-xs hidden-sm hidden-md" src="assets/images/arrow2.png">
          <h5>Filtered Search</h5>
          <p>Feel free to narrow down your search.</p>
        </div>
      </div>
    </div> <!--/ .container -->
</div><!--/ #headerwrap -->


<section id="desc" name="desc"></section>
	<!-- INTRO WRAP -->
	<div id="intro">
		<div class="container">
			<div class="row centered">
				<h1>Search Results</h1>
				<br>
				<br>

        <div id = "flight-result">

        </div>


</div> <!--/ .container -->
 </div><!--/ #introwrap -->


  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>
